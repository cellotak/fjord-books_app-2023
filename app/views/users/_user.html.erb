<div id="<%= dom_id user %>">
  <p>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:postalcode) %>:</strong>
    <%= user.postalcode %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:address) %>:</strong>
    <%= user.address %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:introduction) %>:</strong>
    <%= user.introduction %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= user.email %>
  </p>

</div>
