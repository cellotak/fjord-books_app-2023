<div id="<%= dom_id user %>">
  <p>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:postcode) %>:</strong>
    <%= user.postcode %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:adress) %>:</strong>
    <%= user.adress %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:introduction) %>:</strong>
    <%= user.introduction %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= user.email %>
  </p>

</div>
